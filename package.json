    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "dominoes",
    "game",
    "three.js",
    "vite",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/three": "^0.182.0",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "pretty-quick": "^4.2.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  },
  "dependencies": {
    "three": "^0.181.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
